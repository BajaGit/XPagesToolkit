<faces-config>

	<render-kit>
		<renderer>
			<component-family>org.openntf.xpt.agents.component.uiagentlist</component-family>
			<renderer-type>org.openntf.xpt.agents.component.uiagentlist</renderer-type>
			<renderer-class>org.openntf.xpt.agents.renderkit.html_extended.AgentListRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.openntf.xpt.agents.component.uiagentprogressbar</component-family>
			<renderer-type>org.openntf.xpt.agents.component.uiagentprogressbar</renderer-type>
			<renderer-class>org.openntf.xpt.agents.renderkit.html_extended.ProgressbarRenderer</renderer-class>
		</renderer>
	</render-kit>
	<managed-bean>
		<managed-bean-name>xptAgentBean</managed-bean-name>
		<managed-bean-class>org.openntf.xpt.agents.beans.XPTAgentBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
</faces-config>